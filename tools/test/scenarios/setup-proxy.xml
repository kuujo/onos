<scenario name="setup" description="ONOS proxy cluster setup">
    <group name="Setup">
        <step name="Push-Bits" exec="onos-push-bits-through-proxy" if="${OCT}"/>
        <step name="Enable-Flow-Objective-Intents" if="${ONOS_USE_FOI}"
              exec="onos ${OC1} cfg set org.onosproject.net.intent.impl.compiler.IntentConfigurableRegistrator useFlowObjectives true"/>

        <group name="Cleanup">
            <group name="Cleanup-Proxy">
                <parallel var="${OP#}">
                    <step name="Proxy-Push-Bits-${#}"
                          exec="onos-push-bits ${OP#}"
                          unless="${OCT}"/>
                    <step name="Proxy-Uninstall-${#}"
                          exec="onos-uninstall ${OP#}"/>
                    <step name="Proxy-Kill-${#}"
                          env="~"
                          exec="onos-kill ${OP#}"
                          requires="Proxy-Uninstall-${#}"/>
                </parallel>
            </group>
            <group name="Cleanup-ONOS">
                <parallel var="${OC#}">
                    <step name="ONOS-Push-Bits-${#}"
                          exec="onos-push-bits ${OC#}"
                          unless="${OCT}"/>
                    <step name="ONOS-Uninstall-${#}"
                          exec="onos-uninstall ${OC#}"/>
                    <step name="ONOS-Kill-${#}"
                          env="~"
                          exec="onos-kill ${OC#}"
                          requires="ONOS-Uninstall-${#}"/>
                </parallel>
            </group>
            <group name="Cleanup-Atomix-OC" unless="${OCC1}">
                <parallel var="${OC#}">
                    <step name="Atomix-Kill-${#}"
                          env="~"
                          exec="atomix-kill ${OC#}"/>
                    <step name="Atomix-Uninstall-${#}"
                          exec="atomix-uninstall ${OC#}"
                          requires="Atomix-Kill-${#}"/>
                </parallel>
            </group>
            <group name="Cleanup-Atomix-OCC" if="${OCC1}">
                <parallel var="${OCC#}">
                    <step name="Atomix-Kill-${#}"
                          env="~"
                          exec="atomix-kill ${OCC#}"/>
                    <step name="Atomix-Uninstall-${#}"
                          exec="atomix-uninstall ${OCC#}"
                          requires="Atomix-Kill-${#}"/>
                </parallel>
            </group>
        </group>

        <step name="Generate-Cluster-Key" exec="onos-gen-cluster-key -f"/>

        <group name="Install-Atomix">
            <group name="Install-Atomix-OC" unless="${OCC1}">
                <group name="Parallel-Install-Atomix">
                    <parallel var="${OC#}">
                        <step name="Parallel-Install-Atomix-${#}" exec="atomix-install ${OC#}"
                              requires="Generate-Cluster-Key,Cleanup"/>
                    </parallel>
                </group>
            </group>

            <group name="Install-Atomix-OCC" if="${OCC1}">
                <group name="Parallel-Install-Atomix">
                    <parallel var="${OCC#}">
                        <step name="Parallel-Install-Atomix-${#}" exec="atomix-install ${OCC#}"
                              requires="Generate-Cluster-Key,Cleanup"/>
                    </parallel>
                </group>
            </group>
        </group>

        <group name="Install-ONOS">
            <group name="Sequential-Install-ONOS" if="${ONOS_STC_SEQ_START}">
                <sequential var="${OC#}"
                            starts="Sequential-Install-ONOS-${#}"
                            ends="Sequential-Install-ONOS-${#-1}">
                    <step name="Sequential-Install-ONOS-${#}" exec="onos-install -c ${OC#}"
                          requires="Generate-Cluster-Key,ONOS-Push-Bits-${#},Push-Bits,Cleanup,Install-Atomix"/>
                </sequential>
            </group>

            <group name="Parallel-Install-ONOS" unless="${ONOS_STC_SEQ_START}">
                <parallel var="${OC#}">
                    <step name="Parallel-Install-ONOS-${#}" exec="onos-install -c ${OC#}"
                          requires="Generate-Cluster-Key,ONOS-Push-Bits-${#},Push-Bits,Cleanup,Install-Atomix"/>
                </parallel>
            </group>
        </group>

        <group name="Install-Proxy">
            <group name="Sequential-Install-Proxy" if="${ONOS_STC_SEQ_START}">
                <sequential var="${OP#}"
                            starts="Sequential-Install-Proxy-${#}"
                            ends="Sequential-Install-Proxy-${#-1}">
                    <step name="Sequential-Install-Proxy-${#}" exec="onos-install -p ${OP#}"
                          requires="Generate-Cluster-Key,Proxy-Push-Bits-${#},Push-Bits,Cleanup,Install-Atomix"/>
                </sequential>
            </group>

            <group name="Parallel-Install-Proxy" unless="${ONOS_STC_SEQ_START}">
                <parallel var="${OP#}">
                    <step name="Parallel-Install-Proxy-${#}" exec="onos-install -p ${OP#}"
                          requires="Generate-Cluster-Key,Proxy-Push-Bits-${#},Push-Bits,Cleanup,Install-Atomix"/>
                </parallel>
            </group>
        </group>

        <group name="Verify-ONOS">
            <parallel var="${OC#}">
                <step name="ONOS-Secure-SSH-${#}"
                      exec="onos-secure-ssh -u ${ONOS_WEB_USER} -p ${ONOS_WEB_PASS} ${OC#}"
                      requires="Install-ONOS"/>

                <step name="ONOS-Wait-for-Start-${#}" exec="onos-wait-for-start ${OC#}"
                      requires="~ONOS-Secure-SSH-${#}"/>

                <step name="ONOS-Check-Components-${#}" delay="5"
                      exec="onos-check-components ${OC#}"
                      requires="~ONOS-Wait-for-Start-${#}"/>

                <step name="ONOS-Check-Logs-${#}" exec="onos-check-logs ${OC#}"
                      requires="~ONOS-Check-Components-${#}"/>
                <step name="ONOS-Check-Apps-${#}" exec="onos-check-apps ${OC#} ${ONOS_APPS} includes"
                      requires="~ONOS-Check-Components-${#}"/>

                <dependency name="Enable-Flow-Objective-Intents" requires="Check-Apps-${#}"/>
            </parallel>
        </group>

        <group name="Verify-Proxy">
            <parallel var="${OP#}">
                <step name="Proxy-Secure-SSH-${#}"
                      exec="onos-secure-ssh -u ${ONOS_WEB_USER} -p ${ONOS_WEB_PASS} ${OP#}"
                      requires="Install-Proxy"/>

                <step name="Proxy-Wait-for-Start-${#}" exec="onos-wait-for-start ${OP#}"
                      requires="~Proxy-Secure-SSH-${#}"/>

                <step name="Proxy-Check-Components-${#}" delay="5"
                      exec="onos-check-components ${OP#}"
                      requires="~Proxy-Wait-for-Start-${#}"/>

                <step name="Proxy-Check-Logs-${#}" exec="onos-check-logs ${OP#}"
                      requires="~Proxy-Check-Components-${#}"/>
                <step name="Proxy-Check-Apps-${#}" exec="onos-check-apps ${OP#} ${ONOS_APPS} includes"
                      requires="~Proxy-Check-Components-${#}"/>
            </parallel>
        </group>
    </group>
</scenario>
