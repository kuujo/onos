<scenario name="distributed-lock-test"
          description="ONOS DistributedLock primitive test">
    <group name="Distributed-Primitive-Lock">

        <step name="Distributed-Primitive-Lock.Test-Lock"
              exec="onos ${OCI} lock-test test-lock lock"/>

        <step name="Distributed-Primitive-Lock.Test-Unlock"
              requires="Distributed-Primitive-Lock.Test-Lock"
              exec="onos ${OCI} lock-test test-lock unlock"/>

        <group name="Distributed-Primitive-Lock.Check-Log-Exceptions"
               requires="Distributed-Primitive-Lock.Test-Unlock">
            <parallel var="${OC#}">
                <step name="Distributed-Primitive-Lock.Check-Log-Exceptions-${#}"
                      exec="onos-check-logs ${OC#}"/>
            </parallel>
        </group>

    </group>
</scenario>

